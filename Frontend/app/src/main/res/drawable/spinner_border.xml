<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background for the Spinner -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Set background color -->
            <stroke
                android:width="1dp"
            android:color="@color/DarkYellow" />
            <corners android:radius="4dp" /> <!-- Rounded corners, adjust as needed -->
        </shape>
    </item>

    <!-- Content of the Spinner -->
    <item android:top="4dp">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/transparent" /> <!-- Set the content background color -->
                    <corners android:radius="4dp" /> <!-- Rounded corners, adjust as needed -->
                </shape>
            </item>
            <item android:top="16dp" android:left="16dp" android:right="16dp" android:bottom="16dp">
                <bitmap android:gravity="fill_vertical" android:src="@drawable/icon_dropdown" />
            </item>
        </layer-list>
    </item>
</layer-list>
