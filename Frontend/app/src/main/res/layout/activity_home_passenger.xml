<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow_back"
    tools:context=".activities.HomePassenger">

    <ImageView
        android:id="@+id/mainLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/main_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/idTVHeading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="20dp"
        android:text="Welcome To Our Ticketing App"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/DarkYellow"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/mainLogo"
        app:layout_constraintHorizontal_bias="0.672"
        app:layout_constraintStart_toStartOf="@id/mainLogo"
        app:layout_constraintTop_toBottomOf="@+id/mainLogo" />

    <Button
        android:id="@+id/idBTNGenerate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_button"
        android:text="Generate QR"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/idTVHeading"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/idTVHeading"
        app:layout_constraintTop_toBottomOf="@+id/idTVHeading" />

    <Button
        android:id="@+id/idBTNScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_button"
        android:text="Scan QR"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/idBTNGenerate"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/idBTNGenerate"
        app:layout_constraintTop_toBottomOf="@+id/idBTNGenerate" />


</androidx.constraintlayout.widget.ConstraintLayout>