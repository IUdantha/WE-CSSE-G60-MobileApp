<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow_back"
    android:padding="20dp"
    tools:context=".activities.Violation">

    <!-- Title -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Violation Report"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Passenger Name Label -->
    <TextView
        android:id="@+id/textViewPassengerNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passenger Name:"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Passenger Name EditText -->
    <EditText
        android:id="@+id/editTextPassengerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter passenger's name"
        app:layout_constraintTop_toBottomOf="@+id/textViewPassengerNameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Violation Description Label -->
    <TextView
        android:id="@+id/textViewViolationDescriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Violation Description:"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassengerName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Violation Description EditText -->
    <EditText
        android:id="@+id/editTextViolationDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Describe the violation"
        app:layout_constraintTop_toBottomOf="@+id/textViewViolationDescriptionLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Date and Time -->
    <TextView
        android:id="@+id/textViewDateTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date and Time:"
        app:layout_constraintTop_toBottomOf="@+id/editTextViolationDescription"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter date and time"
        app:layout_constraintTop_toBottomOf="@+id/textViewDateTimeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Violation Type -->
    <TextView
        android:id="@+id/textViewViolationTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Violation Type:"
        app:layout_constraintTop_toBottomOf="@+id/editTextDateTime"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/spinnerViolationType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewViolationTypeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:entries="@array/violation_types"/>

    <!-- Location Information -->
    <TextView
        android:id="@+id/textViewLocationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        app:layout_constraintTop_toBottomOf="@+id/spinnerViolationType"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter location"
        app:layout_constraintTop_toBottomOf="@+id/textViewLocationLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Passenger ID -->
    <TextView
        android:id="@+id/textViewPassengerIDLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passenger ID:"
        app:layout_constraintTop_toBottomOf="@+id/editTextLocation"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextPassengerID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter passenger's ID"
        app:layout_constraintTop_toBottomOf="@+id/textViewPassengerIDLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>



    <!-- Clear Button -->
    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassengerID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>